{
  "name": "@nestmtx/socket-server",
  "version": "0.0.1",
  "description": "A UNIX Domain Socket Server & Client which can be hooked into similary to the Koa HTTP server",
  "main": "dist/index.ejs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/NestMTX/SocketServer.git"
  },
  "scripts": {
    "test": "node -r ts-node/register bin/test.ts",
    "watch": "nodemon",
    "build": "rm -rf dist && npx rollup -c",
    "build:watch": "rm -rf dist && npx rollup -c -w",
    "type-check": "npx tsc --noEmit",
    "docs": "npx typedoc",
    "docs:watch": "npx typedoc --watch",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "author": "Jak Guru <jak@jak.guru>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@japa/assert": "^1.4.1",
    "@japa/run-failed-tests": "^1.1.1",
    "@japa/runner": "^2.5.1",
    "@japa/spec-reporter": "^1.3.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/amqplib": "^0.10.1",
    "@types/dotenv": "^8.2.0",
    "@types/luxon": "^3.3.0",
    "adonis-preset-ts": "^2.1.0",
    "c8": "^8.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "rollup": "^4.9.4",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-coverage": "^2.1.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "dist"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "dependencies": {
    "uuid": "^9.0.1"
  }
}